{
  "name": "@nartallax/e8-devtool",
  "version": "0.0.1",
  "description": "Developer tool for E8 game engine.",
  "author": "Nartallax",
  "license": "0BSD",
  "type": "module",
  "main": "e8-devtool.js",
  "bin": {
    "e8-devtool": "e8-devtool.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nartallax/e8-devtool.git"
  },
  "bugs": {
    "url": "https://github.com/nartallax/e8-devtool/issues"
  },
  "homepage": "https://github.com/nartallax/e8-devtool#readme",
  "scripts": {
    "typecheck": "cd src && ../node_modules/typescript/bin/tsc --noEmit && cd - > /dev/null",
    "test": "npm run test:prepare && npm run typecheck && npm run test:generate && npm run test:build && npm run test:run",
    "test:prepare": "rm -f src/generated/test.ts",
    "test:generate": "npx clamsensor_codegen src src/generated/test.ts",
    "test:build": "npx parcel build --target test --no-cache",
    "test:run": "node ./dist/test/test.js",
    "dev": "npm run typecheck && npm run icons && npm run dev:e8 && (npm run dev:client & npm run dev:server & wait)",
    "dev:e8": "npm link ../e8/target",
    "dev:client": "npx parcel serve --target client --no-cache --no-hmr --port 24658",
    "dev:server": "npm run dev:server:build && ((npx wait-file-change ./target/e8-devtool.js -t 10 && npm run dev:server:run) & npm run dev:server:watch) && :",
    "dev:server:build": "npx parcel build --target server --no-cache",
    "dev:server:watch": "npx parcel watch --target server --no-cache --no-hmr",
    "dev:server:run": "npx nodemon ./target/e8-devtool.js --watch ./target/e8-devtool.js -- --html 'http://localhost:24658' --no-start-open --config $E8_DEVTOOL_CONFIG",
    "generate-everything": "npm run test:generate && npm run icons",
    "icons": "npx icon-font-tool --svg-dir src/icons --font-path src/generated/icons --font-normalize --font-descent 150 --css-path src/generated/icons.css --ts-path src/generated/icons.ts --ts-css-import-style star --ts-name Icon",
    "build": "npm run typecheck && npm run build:prepare && npm run build:client && npm run build:server && npm run build:copy_static",
    "build:prepare": "rm -rf ./target && rm -rf ./dist && mkdir ./target",
    "build:client": "npx parcel build --target client --no-cache",
    "build:server": "npx parcel build --target server --no-cache",
    "build:copy_static": "cp ./LICENSE ./target/ && cp ./README.md ./target && npm run build:cut_package",
    "build:cut_package": "npx package-cutter --output ./target/package.json",
    "pack": "npm run build && cd target && npm pack && mv *.tgz e8-devtool.tgz"
  },
  "devDependencies": {
    "@nartallax/cardboard-dom": "^2.0.8",
    "@nartallax/clamsensor": "^2.0.10",
    "@nartallax/icon-font-tool": "^1.0.6",
    "@nartallax/package-cutter": "^1.0.2",
    "@nartallax/wait-file-change": "^1.0.0",
    "@parcel/plugin": "^2.12.0",
    "@parcel/transformer-sass": "^2.12.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.6.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "nodemon": "^3.0.1",
    "parcel": "^2.12.0",
    "parcel-resolver-ts-base-url": "^1.3.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@nartallax/cardboard": "^2.1.10",
    "@nartallax/cli": "^1.0.2",
    "fernandez-polygon-decomposition": "^2.0.0",
    "mime-types": "^2.1.35",
    "open": "^10.1.0",
    "tempy": "^3.1.0",
    "uuid": "^9.0.1",
    "xml-js": "^1.6.11"
  },
  "peerDependencies": {
    "@nartallax/e8": "0.0.1"
  },
  "targets": {
    "client": {
      "distDir": "./target/client",
      "source": "src/client/index.html",
      "sourceMap": false
    },
    "server": {
      "distDir": "./target",
      "source": "src/server/e8-devtool.ts",
      "context": "node",
      "isLibrary": true,
      "optimize": true,
      "sourceMap": false,
      "outputFormat": "esmodule"
    },
    "test": {
      "source": "src/generated/test.ts",
      "context": "node",
      "optimize": false,
      "outputFormat": "esmodule"
    }
  }
}
